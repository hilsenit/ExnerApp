<%= render partial: 'about/pagination',
  locals: { prev: { title: 'Artikler', path: 'artikler_path()'},
            next_w: { title: 'HÃ¥ndtegninger', path: "vaerker_path('handtegninger')"} } %>

  <h2 class="text-center">Tidslinje</h2>
  <a href="#" class="to-top" id="toTop"><span class="to-top-text">Til toppen</span></a>
  <% 15.times do |i| %>
    <% i = i + 1 %>
    <% this_image_url = image_url 'tidslinje/' + i.to_s + '_del.jpg' %>
    <%= image_tag this_image_url, class: 'time-line-image img_' + i.to_s%>
  <% end %>

<script>
$(document).ready(function() {
  $(".time-line-image").each(function(image) {
    $(this).on("load", function() {
      $(this).addClass("time-line-image-show"); // transition in about.scss
    });
  });
  $(".to-top").click(function(e) {
    e.preventDefault();
    $(this).removeClass('to-top-show');
    window.scrollTo(0, 0);
  });

});
// GODE GAMLE JAVASCRIPT!
var to_top = document.getElementById('toTop');
var showToTop = function() {
  var y = window.scrollY;
  if (y > window.outerHeight) {
    to_top.classList.add("to-top-show");
  } else {
    to_top.classList.remove("to-top-show");
  }
}

window.addEventListener("scroll", showToTop);
</script>
