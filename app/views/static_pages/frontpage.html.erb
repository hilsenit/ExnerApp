<!-- trekanten skifter farve -->
<script type="text/javascript">
	
	$(window).scroll(function () {
	    console.log("BUTTON " + $(".button").offset().top);
	    console.log("TEXT " + $(".front-page-text").offset().top);

	    if ($(".button").offset().top > ($(".front-page-text").offset().top)) {
	        $(".button").animate({
	        	borderColor: "black"},
	        	500, function() {
	        		if ($(".button").offset().top < ($(".front-page-text").offset().top)) {
	        			$(".button").animate({
	        				borderColor: "white"},
	        				500
	        				);
	        		}
	        	}
	        );
	     } 

	 });
</script>