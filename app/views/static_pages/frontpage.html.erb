<div class="indexbackground"><!-- billede -->
   <img src="<%= image_url('inger-og-johannes-exner.jpg') %>" id="hiddenImage" hidden />
</div>
  <script>
    $("#hiddenImage").on('load', function() {
      image_src = $(this).attr('src');
      $(".indexbackground").css({
        "background-image": 'url(' + image_src + ')',
        "background-size": 'cover' // The load icon shoudn't cover the while screen
      });
    });
  </script>
	<div class="oversigt-button-wrapper hidden-md-up"><%= link_to "Gå til oversigt &#8594;".html_safe, oversigt_path(), class: "oversigt-button" %></div>
<div class="row indexwrapper overskrift-wrapper remove-margin">
  <div class="col-md-12 frontpage-ark">
    <div class="h4 masthead-overskrift-ark">Arkitekterne</div><div class="h1 masthead-overskrift">Inger og Johannes Exner</div>
    <p class="text-center button-read-more white hidden-md-down">Hvorfor denne hjemmeside? Læs mere <%= fa_icon "angle-down" %></p> 
  </div>
</div><!-- indexwrapper -->
<div class="row remove-margin">
  <div class="offset-lg-3 col-lg-6 offset-md-1 col-md-10 front-page-text">
    <% if @text.nil? %>
      <%= link_to "Opret tekst", ny_forside_tekst_path(), class: "btn btn-secondary" if logged_in?(:site_admin) %>
    <% else %>
      <%= link_to "Rediger teksten", rediger_forside_tekst_path(@text.id), class: "btn btn-secondary" if logged_in?(:site_admin) %>
      <%= @text.text.html_safe %>
    <% end %> 
  </div>
  <div class="col-lg-3 float-left to-oversigt">
    <%= link_to oversigt_path, class: "float-right affix" do %>
      <div class="button"></div>
    <% end %>
  </div>

</div><!-- row -->
<!-- trekanten skifter farve -->
<script type="text/javascript">
  $(document).ready(function() {
    $(".button-read-more").click(function (){
      $('html, body').animate({
        scrollTop: $(".front-page-text").offset().top
      }, 500);
    });
  })
$(window).scroll(function () {
  if ($(".button").offset().top > ($(".front-page-text").offset().top)) {
    $(".button").addClass('black-trans');
  } else {
    $(".button").removeClass('black-trans');
  }	
});
</script>
