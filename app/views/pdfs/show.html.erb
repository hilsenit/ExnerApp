<!-- Jeg er nødt til at tilføje css i denne fil, da den ikke læser det ellers i iframe --> 
<head>
	<title><%= "Johannes' værker | #{@header_title}" %></title>
</head>
<% unless @prev_pdf.nil? %>
<%= link_to truncate(@prev_pdf.title, length: 45), pdf_category_pdf_path(@prev_pdf.pdf_category, @prev_pdf), style: "font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif; font-size: 1rem; font-weight: normal; line-height: 1.5; color: black!important; float: left; width: 33%; text-align: center" %>
<% else %>
	<div style="width: 33%; float: left; height: 10px;"></div>
<% end %>
<%= link_to @pdf_category.title, show_this_pdf_category_path(@pdf_category.friendly_id), style: "font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif; font-size: 1rem; font-weight: normal; line-height: 1.5; color: black!important; float: left; width: 33%; text-align: center" %>

<% unless @next_pdf.nil? %>
<%= link_to truncate(@next_pdf.title, length: 45), pdf_category_pdf_path(@next_pdf.pdf_category, @next_pdf), style: "font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif; font-size: 1rem; font-weight: normal; line-height: 1.5; color: black!important; float: left; width: 33%; text-align: center" %>
<% else %>
<div style="width: 33%; float: left; height: 10px;"></div>
<% end %>

<iframe src="<%= @pdf_url %>" style="left: 0; border: 0; width: 100%; height: 95%; position: absolute; top: 30px" frameborder="0" scrolling="no" crossorigin="anonymous">
</iframe> 



