<% content_for :title do %>
  <% if "andres-tekster" == params[:pdf_category_id] %>
    <title><%= "Artikler af andre forfattere | #{@header_title}" %></title>
  <% elsif "andres-tekster-andre-sprog" == params[:pdf_category_id] %>
    <title><%= "Andre sprog | #{@header_title}" %></title>
  <% else %>
    <title><%= "Johannes' vÃ¦rker | #{@header_title}" %></title>
  <% end %>
<% end %>

<%= javascript_pack_tag 'pdf_show' %>

<span id="pdfId" data-path="<%= @pdf.file %>" hidden></span>

<div class="back-button row remove-margin">
	<div class="col-md-12 nav-link text-center">
		<%= link_to "Tilbage", show_this_pdf_category_path(@pdf_category.friendly_id) %>
	</div>
</div>
<div class="next-prev-back-wrapper row">
	<div class="col-md-4 nav-link">
		<span class="pagination-arrows prev-work"></span>
		<%= link_to @prev_pdf.title, pdf_category_pdf_path(@prev_pdf.pdf_category, @prev_pdf) unless @prev_pdf.nil? %>
	</div>
	<div class="col-md-4 nav-link text-center">
		<%= link_to @pdf_category.title, show_this_pdf_category_path(@pdf_category.friendly_id) %>
	</div>
	<div class="col-md-4 nav-link text-right ">
		<%= link_to @next_pdf.title, pdf_category_pdf_path(@next_pdf.pdf_category, @next_pdf) unless @next_pdf.nil? %>
		<span class="pagination-arrows next-work"></span>
	</div>
</div>

<div class="pdf-container">
  <pdf-show></pdf-show>
</div>


