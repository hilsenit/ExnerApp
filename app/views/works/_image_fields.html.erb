<div class="<%= "image-draft" if f.object.draft %> form-group nested-fields col-lg-3 billede-upload-box sort-this-image">
  <% unless f.object.image.file.nil? %>
    <%= content_tag :div, "Skift til dette som oversigtsbillede",
      class: "pb-4 text-center overview-img-checkbox",
      onclick: "getOverviewImg(#{@work.id}, #{f.object.image.model.id})"
    %>
    <%= image_tag f.object.image.thumb.url %>
  <% else %>
    <label class="btn btn-secondary billede-upload-felt">
      <%= f.file_field :image, class: "work-file-field" %>
    </label>
  <% end %>
  <%= f.label :image_description, "Billedbeskrivelse" %>
  <%= f.text_area :image_description, class: "form-control" %>
  <%= f.label :photographer, "Fotograf" %>
  <%= f.text_field :photographer, class: "form-control" %>
  <%= f.label :draft, "Vis ikke" %>
  <%= f.check_box :draft, class: "form-control" %>

  <div class="col-lg-12 mt-4">
    <%= link_to_remove_association "Slet billede", f, class: "btn btn-warning" %>
  </div>

</div>
