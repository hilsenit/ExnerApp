<% content_for(:bread_crumb_parent) { { title: category.name, path: 'vaerker_path(#{category.name.parameterize})' } } %>
<h2 class="work-headline"><%= category.name %></h2>
<div class="row sortable works-wrapper">

  <% unless works.empty? %>
    <% works.each do |work| %>
      <div class="<%= params[:vaerker_cat] == 'orgler' ? 'overview-work-vert' : 'overview-work' %> overview-work sortable-item" data-id="<%= work.id %>" data-type="<%= work.class.to_s %>">
        <%= link_to work_path(work) do %>
          <% unless work.images.empty? %>
            <div class="<%= params[:vaerker_cat] == 'orgler' ? 'overview-vert-img-block' : 'overview-img-block' %>" style="background-image: url(<%= work.overview_img %>)">
              <%# <%= image_tag(work.overview_img, class: "overview-img") %1> %>
            </div>
            <h2 class="<%= params[:vaerker_cat] == 'orgler' ? 'overview-work-vert-h2' : 'overview-work-h2' %>"><%= work.name %></h2>
          <% else %>
            <div class="<%= params[:vaerker_cat] == 'orgler' ? 'overview-vert-img-block' : 'overview-img-block' %> work-without-image">
            </div>
            <h2 class="<%= params[:vaerker_cat] == 'orgler' ? 'overview-work-vert-h2' : 'overview-work-h2' %>"><%= work.name %></h2>
          <% end %>


        <% end %>
      </div>
    <% end %>
  <% else %>

  <% end %><!-- works.empty? -->
</div>




