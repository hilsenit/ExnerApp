<div class="row">
	<% @pdf_categories.each do |cat| %>
	<div class="col-md-6 col-sm-4 pdf-cat ">
		<%= link_to show_pdf_category_path(cat.id) do %>
		<h4 class="text-center"><%= cat.title %></h4>
		<% end %>
	</div>

	<% end %>

	<div class="col-sm-12"></div>
	<div class="pdf-works row">
		<% @pdfs.each do |pdf| %>
		<div class="col-md-3">
			<%= link_to "Rediger", edit_pdf_category_pdf_path(pdf.pdf_category, pdf), class: "btn btn-secondary" if logged_in?(:site_admin) %>
			<%= link_to pdf_category_pdf_path(pdf.pdf_category, pdf)  do %>
			<h4><%= pdf.title %></h4>
			<%= content_tag :p, "Udgivet: #{pdf.date.strftime("%Y")}" unless pdf.date.nil? %>
			<% end %>
		</div>
		<% end %>
	</div>

</div><!-- row -->

