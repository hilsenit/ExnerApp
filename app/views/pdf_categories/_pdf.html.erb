<div class=" col-md-3 col-4 pdf <%= 'pdf-not-shown' if pdf.show_not %>">
  <% if pdf.show_not %>
    <small>Bliver ikke vist til besÃ¸gende</small>
  <% end%>
  <%= link_to "Rediger", edit_pdf_category_pdf_path(pdf.pdf_category, pdf), class: "btn btn-secondary" if logged_in?(:site_admin) %>
  <hr>
    <%= link_to pdf_category_pdf_path(pdf.pdf_category, pdf)  do %>
      <%= content_tag :p, pdf.date.strftime("%Y"), class: "pdf-udgivet pdf-title" unless pdf.date.nil? %>
      <%= content_tag :div, (image_tag pdf.image.thumb.url), class:"img-wrapper" unless pdf.image.thumb.url.nil? %>
      <p class="pt-3 pdf-title"><%= pdf.title %></p>
    <% end %>
</div>
