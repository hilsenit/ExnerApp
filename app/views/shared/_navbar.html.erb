        Oversigt
      <% end %>
    </div>
  </nav>
  <nav class="blog-nav-dropdown hide-it" data-dropdown="menu">
      <div class="col-lg-4 float-left">
        <%= link_to "Oversigt", oversigt_path, class: "nav-link #{active_helper? oversigt_path}" %>
        <%= link_to "Kirker og sognegårde", vaerker_path("Kirker og sognegårde".parameterize), class: "nav-link #{active_helper? vaerker_path("Kirker og sognegårde".parameterize)}" %>
