      <div class="col-lg-4 float-left">
        <%= link_to "Design", vaerker_path("belysning-og-andet", noload: "true"), class: "nav-link #{active_helper? vaerker_path("Design".parameterize)}" %>
        <%= link_to "Ikke opført", vaerker_path("Ikke opført".parameterize), class: "nav-link #{active_helper? vaerker_path("Ikke opført".parameterize)}" %>
