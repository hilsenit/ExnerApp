      </div>
      <div class="col-lg-4 float-left">
        <%= link_to "Særlige bygninger", vaerker_path("Særlige bygninger".parameterize), class: "nav-link #{active_helper? vaerker_path("Særlige bygninger".parameterize)}" %>
        <%= link_to "Andre", vaerker_path("Andre".parameterize), class: "nav-link #{active_helper? vaerker_path("Andre".parameterize)}" %>
        <%= link_to "Kirkerestaureringer", vaerker_path("Kirkerestaureringer".parameterize), class: "nav-link #{active_helper? vaerker_path("Kirkerestaureringer".parameterize)}" %>
