<div class="blog-nav-wrapper">
  <nav class="blog-nav">
    <span class="info-button" data-button="menu">Menu</span>
      <% if !@category.nil? %>
        <%= link_to @category.name, vaerker_path(@category.name.parameterize), class: "nav-link text-center" %>
      <% elsif @work.present? %>
        <%= link_to @work.category.name, vaerker_path(@work.category.name.parameterize), class: "nav-link text-center" %>
        >
        <%= link_to @work.name, work_path(@work), class: "nav-link text-center" %>
      <% else %>
        <% if params[:controller] == "about" %>
          <%= link_to "Om", om_path(), class: "nav-link" %>
        <% else %>
          <%= link_to "Oversigt", oversigt_path, class: "nav-link" %>
        <% end %>
      <% end %>
  </nav>
  <nav class="blog-nav-dropdown hide-it" data-dropdown="menu">
    <% if params[:controller] == "categories" %><!-- hvis det er oversigtssiden, som bliver vist -->
      <%= render partial: 'shared/oversigt_menu' %>
    <% else %>
      <%= render partial: 'shared/normal_menu' %>
    <% end %>
  </nav>
</div>
<script type="text/javascript">
  $(document).ready(function() {
    $("[data-button='menu']").click(function () {
    $("[data-dropdown='menu']").slideToggle(400);
  });
  });
</script>
